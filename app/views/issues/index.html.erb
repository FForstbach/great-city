<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="tab-bar">
        <div class="card tab" id="active">
          <h1>ACTIVE PROJECTS</h1>
        </div>
        <div class="card tab" id="past">
          <h1>PAST PROJECTS</h1>
        </div>
    </div>
  </div>
  <div class="row">
    <% @issues.each do |issue| %>
      <div class="col-xs-12 col-sm-6">
        <%= link_to (issue) do %>
          <div class="card" style="background-image: linear-gradient(rgba(255,255,255,0.6), rgba(255,255,255,0.8)), url(<%= issue.photo %>);">
            <h2><%= issue.title.upcase %></h2>
            <h3><%= issue.votes %>Votes</h3>
          </div>
        <% end %>
      </div>
    <% end %>
      <div class="col-xs-12 col-sm-6">
      <%= link_to new_issue_path do %>
        <div class="card" id="new-project">
          <i class="fa fa-plus fa-3x" aria-hidden="true"></i>
          <h2>ADD ISSUE NOW</h2>
        </div>
        <% end  %>
      </div>
  </div>
</div>


